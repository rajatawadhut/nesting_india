<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/flatlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/cardviewbg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/namelayout"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black2"
                    android:layout_weight="3"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:text="Name -"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:textColor="@color/black2"
                    android:layout_weight="1"
                    android:id="@+id/fullname"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:text="Rajat Awadhut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/emaillayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black2"
                    android:layout_weight="3"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:text="Email -"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black2"
                    android:layout_weight="1"
                    android:id="@+id/email"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:text="rajatawdhut@gmail.com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/mobilelayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black2"
                    android:layout_weight="3"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:text="Mobile -"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black2"
                    android:layout_weight="1"
                    android:id="@+id/mobile"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:text="9766260279"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/citylayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black2"
                    android:layout_weight="3"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:text="City -"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black2"
                    android:layout_weight="1"
                    android:id="@+id/city"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:text="Nagpur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



            <LinearLayout

                android:id="@+id/propertylayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black2"
                    android:layout_weight="3"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:text="Property -"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black2"
                    android:layout_weight="1"
                    android:id="@+id/property"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:text="Residential,  Apartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:paddingBottom="5dp"

                android:id="@+id/datelayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black2"
                    android:layout_weight="3"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:text="Date -"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black2"
                    android:layout_weight="1"
                    android:id="@+id/date"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:text="2021-03-06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:paddingBottom="5dp"
                android:id="@+id/call_button"
                android:paddingRight="18dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="5dp"
                    android:layout_gravity="right"
                    android:background="@drawable/callbg111"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/call" />
            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>