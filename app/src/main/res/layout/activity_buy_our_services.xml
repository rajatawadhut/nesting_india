                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="1200"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="25dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_marginTop="25dp"
                                android:paddingBottom="15dp"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:text="Gold Package"
                                android:layout_below="@+id/money2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>



                        <TextView
                            android:textColor="@color/black2"
                            android:textAlignment="center"
                            android:text="@string/gold1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/black2"
                            android:textAlignment="center"
                            android:text="For 60 days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/btn_1200"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="35dp"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:text="Buy Now"
                            android:background="@drawable/home_btn_bg"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>



                </androidx.cardview.widget.CardView>
            </RelativeLayout>





            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:backgroundTint="@color/white"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RelativeLayout
                            android:id="@+id/relative3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_bg">

                            <ImageView
                                android:layout_marginTop="5dp"
                                android:layout_toLeftOf="@+id/money3"
                                android:src="@drawable/rupee2"
                                android:layout_centerVertical="true"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:id="@+id/money3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="2000"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="25dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_marginTop="25dp"
                                android:paddingBottom="15dp"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:text="Platinum Package"
                                android:layout_below="@+id/money3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>



                        <TextView
                            android:textColor="@color/black2"
                            android:textAlignment="center"
                            android:text="@string/platinum1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/black2"
                            android:textAlignment="center"
                            android:text="For 90 days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/btn_2000"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="35dp"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:text="Buy Now"
                            android:background="@drawable/home_btn_bg"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>



                </androidx.cardview.widget.CardView>
            </RelativeLayout>


