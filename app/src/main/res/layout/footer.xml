<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="4dp"
            android:background="@drawable/cardviewbg"
            android:id="@+id/homefooter"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/footerh"
                android:src="@drawable/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tint="@color/white" />
            <TextView
                android:textColor="@color/white"
                android:id="@+id/homefooter1"
                android:text="Home"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="4dp"
            android:background="@drawable/cardviewbg"
            android:id="@+id/latestfooter"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/footerl"
                android:src="@drawable/latest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tint="@color/white" />
            <TextView
                android:paddingTop="3dp"
                android:id="@+id/latestfooter1"
                android:text="Latest"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
        </LinearLayout>



        <LinearLayout
            android:layout_margin="4dp"
            android:background="@drawable/cardviewbg"
            android:id="@+id/shortlistedfooter"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                app:tint="@color/white"
                android:id="@+id/footershort"
                android:src="@drawable/heart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:paddingTop="3dp"
                android:id="@+id/shortlistedfooter1"
                android:text="Shortlist"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="3dp"
            android:background="@drawable/cardviewbg"
            android:id="@+id/settingfooter"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                app:tint="@color/white"
                android:id="@+id/footers"
                android:src="@drawable/settingfinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/settingfooter1"
                android:text="Setting"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
        </LinearLayout>






    </LinearLayout>


</RelativeLayout>