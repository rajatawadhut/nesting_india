<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4E8EEE9"
    android:orientation="vertical"
    tools:context=".Avtivities.TestimonialsActivity"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:id="@+id/linearlay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbarlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                app:titleTextColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/gradient_bg"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="@dimen/dimen10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fnamelay"
                        android:layout_marginTop="@dimen/dimen10dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:clickable="false"
                            android:focusable="false"
                            android:singleLine="true"
                            android:editable="false"
                            android:imeOptions="actionNext"
                            android:completionThreshold="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/fname"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:hint="First Name"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lnamelay"
                        android:layout_marginTop="@dimen/dimen10dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:clickable="false"
                            android:focusable="false"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:editable="false"
                            android:completionThreshold="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lname"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:hint="Last Name"/>
                    </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emaillay"
                        android:layout_marginTop="@dimen/dimen10dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:clickable="false"
                            android:focusable="false"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:completionThreshold="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:id="@+id/email"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:hint="Email"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phonelay"
                        android:layout_marginTop="@dimen/dimen10dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:clickable="false"
                            android:focusable="false"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:completionThreshold="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/mobile"
                            android:inputType="number"
                            android:editable="false"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:hint="Phone"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/messagelay"
                        android:layout_marginTop="@dimen/dimen10dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:inputType="textCapSentences|textMultiLine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/message"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:hint="Review"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:theme="@style/RatingBar"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:background="@drawable/home_btn_bg"
                        android:layout_marginTop="10dp"
                        android:id="@+id/sendreview"
                        android:textColor="@android:color/white"
                        android:text="Send"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"/>





                </LinearLayout>


            </ScrollView>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/linearlay"
        android:layout_above="@+id/footer"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylerview"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/reviewbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/reviewratingbg" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</RelativeLayout>




