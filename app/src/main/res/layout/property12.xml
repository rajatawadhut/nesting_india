<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/cardviewbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/cardImage"
                app:cardCornerRadius="5dp"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/propertyimage"
                    android:src="@drawable/villa"
                    android:background="@drawable/border_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:background="@drawable/shortlistedbg"
                    android:padding="@dimen/dimen4dp"
                    android:id="@+id/shortlisted"
                    android:layout_marginTop="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/shortlistedheart" />

                <TextView
                    android:paddingRight="3dp"
                    android:textAlignment="center"
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="3dp"
                    android:background="#4FD557"
                    android:paddingLeft="2dp"
                    android:text="Rent"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:background="#CE333030"
                    android:layout_width="match_parent"
                    android:layout_height="11sp">

                    <TextView
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        android:text="   Posted On "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                <TextView
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:id="@+id/date"
                    android:text="Wed 27, 2020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_weight="1"
                android:layout_below="@id/cardImage"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                android:paddingTop="5dp"
                android:paddingLeft="3dp"
                android:id="@+id/linearname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:paddingLeft="@dimen/dimen5dp"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35 Lac"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="19sp"
                    android:textStyle="bold" />


                <ImageView
                    android:paddingRight="25dp"
                    android:src="@drawable/mail"
                    android:layout_alignParentRight="true"
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_verified"
                    android:id="@+id/verified"
                    app:tint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>





            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linearblood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:textSize="15sp" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black2"
                    android:fontFamily="@font/s7"
                    android:paddingTop="1dp"
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingLeft="5dp"
                    android:text="Address"
                    android:textSize="11sp" />

            </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linearbhk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black2"
                        android:fontFamily="@font/s7"
                        android:textSize="12dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/bhk"
                        android:text="2 BHK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black2"
                        android:fontFamily="@font/s7"
                        android:paddingLeft="5dp"
                        android:id="@+id/listingfor"
                        android:text="Sell"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black2"
                        android:fontFamily="@font/s7"
                        android:id="@+id/builtupa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="15000"
                        android:textSize="10dp" />
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black2"
                        android:fontFamily="@font/s7"
                        android:textSize="10dp"
                        android:paddingLeft="5dp"
                        android:text="Sqft"
                        android:id="@+id/builtupaunit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


                <LinearLayout
                    android:paddingTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black2"
                        android:fontFamily="@font/s7"
                        android:textSize="13sp"
                        android:paddingLeft="5dp"
                        android:id="@+id/categorytype"
                        android:text="Residential Apartment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:paddingTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black2"
                        android:fontFamily="@font/s7"
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Apartment"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="2dp"
                    android:paddingLeft="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black2"
                        android:fontFamily="@font/s7"
                        android:textSize="9sp"
                        android:id="@+id/usertype"
                        android:text="Owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black2"
                        android:fontFamily="@font/s7"
                        android:textSize="8sp"
                        android:text=" : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/black2"
                        android:fontFamily="@font/s7"
                        android:textSize="8sp"
                        android:id="@+id/fname"
                        android:text="Rajat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/s7"

                        android:textSize="8sp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/lname"
                        android:text="Awadhut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:gravity="bottom"
                    android:paddingTop="8dp"
                    android:id="@+id/numbershare9"
                    android:layout_gravity="bottom"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:background="@drawable/home_btn_bg"
                        android:textAllCaps="false"
                        android:text="View Number"
                        android:textSize="10sp"
                        android:id="@+id/viewnumber"
                        android:textColor="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:paddingTop="1dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:padding="6dp"
                            android:background="@drawable/callbg111"
                            android:id="@+id/call_button"
                            android:layout_marginRight="15dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/call" />

                        <ImageView
                            android:gravity="right"
                            android:padding="6dp"
                            android:background="@drawable/sharebg111"
                            android:id="@+id/share_button"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_share_black_24dp" />

                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:paddingBottom="2dp"
                    android:paddingRight="15dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:paddingTop="2dp"
                        android:paddingRight="15dp"
                        android:id="@+id/addimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/addimg" />
                    <ImageView
                        android:paddingTop="2dp"
                        android:paddingRight="10dp"
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/edit" />
                    <ImageView
                        android:id="@+id/delete"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/delete" />
                </LinearLayout>




            </LinearLayout>


        </LinearLayout>
        </RelativeLayout>



    </androidx.cardview.widget.CardView>
